{{!-- {{! views/pages/settings.hbs }}

<div class="flex min-h-screen bg-gray-50">
  <aside class="w-64 bg-white shadow-lg">
    <div class="p-4">
      <div class="flex items-center space-x-4 mb-6">
        <img
          src="{{userData.avatar}}"
          alt="Profile"
          class="h-12 w-12 rounded-full object-cover"
          onerror="this.src='https://dreamsmiledental.com/wp-content/uploads/2022/06/generic-doctor-profile.jpeg'"
        />
        <div>
          <h2 class="font-semibold text-gray-900">{{userData.name}}</h2>
          <p class="text-sm text-gray-500">{{userData.email}}</p>
        </div>
      </div>

      <nav class="space-y-1">
        {{#each navigation}}
          <a href="/settings/{{this.tab}}"
             class="flex items-center space-x-3 w-full px-4 py-2 text-sm rounded-lg {{#if (eq ../activeTab this.tab)}}bg-blue-50 text-blue-600{{else}}text-gray-600 hover:bg-gray-50{{/if}}">
            <i class="fi fi-{{this.icon}} h-5 w-5"></i>
            <span>{{this.name}}</span>
          </a>
        {{/each}}

        <a href="/logout" class="flex items-center space-x-3 w-full px-4 py-2 text-sm text-red-600 hover:bg-red-50 rounded-lg">
          <i class="fi fi-log-out h-5 w-5"></i>
          <span>Logout</span>
        </a>
      </nav>
    </div>
  </aside>

  <main class="flex-1 p-8">
    <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-sm p-8">

      {{!-- Profile Settings --}}
      {{#if (eq activeTab "profile")}}
        <div class="space-y-6">
          <h1 class="text-2xl font-bold text-gray-900">Profile Settings</h1>
          <div class="flex items-center space-x-6">
            <img src="{{userData.avatar}}" alt="Profile" class="h-24 w-24 rounded-full object-cover"
                 onerror="this.src='https://images.unsplash.com/photo-1494790108377-be9c29b29330?ixlib=rb-1.2.1'"/>
            <button class="px-4 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-50">
              Change Photo
            </button>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="space-y-2">
              <label class="block text-sm font-medium text-gray-700">Name</label>
              <input type="text" name="name" value="{{userData.name}}" class="input-base" placeholder="Enter your name"/>
            </div>

            <div class="space-y-2">
              <label class="block text-sm font-medium text-gray-700">Email</label>
              <input type="email" name="email" value="{{userData.email}}" class="input-base"/>
            </div>

            <div class="space-y-2">
              <label class="block text-sm font-medium text-gray-700">Eye Color</label>
              <select name="eyeColor" class="select-base">
                {{#each selectOptions.eyeColor}}
                  <option value="{{this}}" {{#if (eq ../userData.eyeColor this)}}selected{{/if}}>{{this}}</option>
                {{/each}}
              </select>
            </div>

            <div class="space-y-2">
              <label class="block text-sm font-medium text-gray-700">Hair Color</label>
              <select name="hairColor" class="select-base">
                {{#each selectOptions.hairColor}}
                  <option value="{{this}}" {{#if (eq ../userData.hairColor this)}}selected{{/if}}>{{this}}</option>
                {{/each}}
              </select>
            </div>
          </div>
        </div>
      {{/if}}

      {{!-- Notifications --}}
      {{#if (eq activeTab "notifications")}}
        <div class="space-y-6">
          <h1 class="text-2xl font-bold text-gray-900">Notification Preferences</h1>
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-medium text-gray-900">Email Notifications</h3>
              <p class="text-sm text-gray-500">Receive updates via email</p>
            </div>
            <input type="checkbox" name="emailUpdates" {{#if userData.emailUpdates}}checked{{/if}} />
          </div>
        </div>
      {{/if}}

      {{!-- Security --}}
      {{#if (eq activeTab "security")}}
        <div class="space-y-6">
          <h1 class="text-2xl font-bold text-gray-900">Security Settings</h1>
          <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Change Password</button>
          <button class="px-4 py-2 border border-gray-300 rounded-lg text-sm hover:bg-gray-50">
            Enable Two-Factor Authentication
          </button>
        </div>
      {{/if}}

      {{!-- Preferences --}}
      {{#if (eq activeTab "preferences")}}
        <div class="space-y-6">
          <h1 class="text-2xl font-bold text-gray-900">App Preferences</h1>
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-medium text-gray-900">Dark Mode</h3>
              <p class="text-sm text-gray-500">Enable dark theme</p>
            </div>
            <input type="checkbox" name="darkMode" {{#if userData.darkMode}}checked{{/if}} />
          </div>
        </div>
      {{/if}}

      {{!-- Help --}}
      {{#if (eq activeTab "help")}}
        <div class="space-y-6">
          <h1 class="text-2xl font-bold text-gray-900">Help & Support</h1>
          <p class="text-gray-600">If you need assistance, please contact support@example.com</p>
        </div>
      {{/if}}

    </div>
  </main>
</div> --}}

<div class="flex w-full">
  {{> settings/sidebar userData=userData activeTab=activeTab }}
  
  <main class="flex-1 p-8">
    <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-sm p-8">
      {{#if (eq activeTab "profile")}}
        {{> settings/profile userData=userData }}
      {{/if}}

      {{#if (eq activeTab "notifications")}}
        {{> settings/notifications userData=userData }}
      {{/if}}

      {{#if (eq activeTab "security")}}
        {{> settings/security }}
      {{/if}}

      {{#if (eq activeTab "preferences")}}
        {{> settings/preferences userData=userData }}
      {{/if}}

      {{#if (eq activeTab "help")}}
        {{> settings/help }}
      {{/if}}
    </div>
  </main>
</div>
