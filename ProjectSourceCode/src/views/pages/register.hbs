{{> header}}

<link rel="stylesheet" href="/css/register.css" />

<main class="register-page">
  <section class="register-card">
    <h1 class="register-header text-center">Register</h1>

    {{#if message}}
    <p class="text-center register-feedback" style="color: red; margin-bottom: 15px;">
    {{message}}
    </p>
    {{/if}}

    <form action="/register" method="POST" class="register-form" id="registerForm">

      <!-- EMAIL (actually username in DB) -->
      <div class="mb-3">
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          placeholder="Email"
          required
        />
      </div>

      <!-- PASSWORD -->
      <div class="mb-3">
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Password"
          required
        />
      </div>

      <!-- PASSWORD REQUIREMENTS -->
      <!-- CONFIRM PASSWORD -->
      <div class="mb-4">
        <input
          type="password"
          class="form-control"
          id="confirmPassword"
          name="confirmPassword"
          placeholder="Confirm Password"
          required
        />
      </div>

      <button type="submit" class="register-submit" id="registerSubmit" disabled>
        Register
      </button>
    </form>

    <p class="register-to-login text-center">
      Already have an account? <a href="/login">Login</a>
    </p>

    <!-- PASSWORD FEEDBACK (strength + mismatch) -->
    <p class="text-center register-feedback" id="passwordFeedback"></p>

    <!-- EMAIL FEEDBACK -->
    <p class="text-center register-feedback" id="emailFeedback"></p>

  </section>
</main>

<script src="/js/register.js" defer></script>

{{> footer}}
